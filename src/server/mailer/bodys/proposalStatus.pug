doctype html
html
	head
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css')
		link(href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet")
		style
			include style.css
	body
		div.section
			div.container
				div.img(src=`${statusAsset}`, style="padding: 18px 22px")
				div.title Your proposal was #{status}
				div.row
					div.child Service
					div.child #{serviceName}
				div.row
					div.child Payment method
					div.child #{paymentMethod}