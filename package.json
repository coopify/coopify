{
  "name": "Coopify-Backend",
  "version": "0.0.1",
  "description": "Coopify nodeJS backend ",
  "main": "src/index.ts",
  "scripts": {
    "lint:js": "node_modules/.bin/eslint .",
    "lint:ts": "node_modules/.bin/tslint -t codeFrame 'src/**/*.ts' 'lib/**/*.ts' 'bin/**/*.ts' 'config/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn run lint:js && yarn run lint:ts",
    "test": "mocha --opts test/mocha.opts --exit",
    "precommit": "lint-staged",
    "prebuild": "rimraf dist",
    "js-start": "node ./dist/src/index.js",
    "ts-start": "yarn run build:live",
    "build": "node_modules/.bin/tsc",
    "build:live": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts --watch src",
    "copy-files": "cp -R files/ dist/files/",
    "copy-package": "cp package.json dist/package.json",
    "db:create": "node_modules/.bin/sequelize db:create",
    "db:drop": "node_modules/.bin/sequelize db:drop",
    "db:migrate": "node_modules/.bin/sequelize db:migrate --config ./config/config.js",
    "zip": "cd dist && zip bundle.zip -r * .[^.]*"
  },
  "lint-staged": {
    "{lib,server,config,validations}/**/*.ts": [
      "prettier --print-width 120 --no-semi --single-quote true --write",
      "git add"
    ]
  },
  "author": "Camilo, Agustin, Ismael & Juan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:coopify/coopify.git"
  },
  "keywords": [
    "REST",
    "API"
  ],
  "dependencies": {
    "@mcrowe/redis-promise": "^0.0.1",
    "@sendgrid/mail": "^6.3.1",
    "@types/apn": "^2.1.2",
    "@types/cors": "^2.8.3",
    "@types/helmet": "^0.0.37",
    "apn": "^2.1.5",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "class-validator": "^0.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.15.5",
    "express-validation": "^1.0.2",
    "factory-girl": "^5.0.4",
    "fb": "^2.0.0",
    "geojson": "^0.5.0",
    "googleapis": "^37.2.0",
    "growl": "^1.10.0",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.2.2",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.0.1",
    "lodash": "^4.17.5",
    "minimatch": "^3.0.2",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.13",
    "mongoose": "^4.13.3",
    "nodemon": "^1.12.1",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.10",
    "request-promise": "^4.2.4",
    "sequelize": "^4.37.10",
    "sequelize-typescript": "^0.5.0",
    "ts-node": "^6.0.5",
    "winston": "3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/chai": "^4.0.5",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/geojson": "^1.0.6",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mocha": "^2.2.43",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.0",
    "@types/mongodb": "^2.2.15",
    "@types/mongoose": "^4.7.27",
    "@types/node": "^8.0.31",
    "@types/pg": "^7.1.4",
    "@types/redis": "^2.6.0",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.6",
    "chai": "^4.1.2",
    "chai-change": "^2.1.2",
    "dirty-chai": "^2.0.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "istanbul": "^0.4.5",
    "mocha": "5.2.0",
    "mocha-typescript": "^1.1.12",
    "redis-mock": "^0.24.0",
    "sequelize-cli": "^4.0.0",
    "supertest": "^3.0.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "3.1.3"
  }
}
